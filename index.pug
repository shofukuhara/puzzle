                  a(href="#" class="btn__wh")
              a(href="#" class="business__list-item")
                img(src="src/img/Business_3_pc.jpg", alt="")
                .business__list-flex
                  span.business__list-number 03
                  .business__list-title
                    span.business__list-en Marketing
                    span.business__list-ja マーケティング
                  a(href="#" class="btn__wh")
      section.news
        span.news__smltitle News
        .news__box
          dl.news__item
            dt.news__item-dt
              span.news__item-date 2022.08.01
              span.news__item-tag news
            dd.news__item-dd
              p.news__item-text テキストテキストテキストテキストテキストテキスト
            dt.news__item-dt
              span.news__item-date 2022.08.02
              span.news__item-tag news
            dd.news__item-dd
              p.news__item-text テキストテキストテキストテキストテキストテキスト
            dt.news__item-dt
