        .wrapper
          span.company__smltitle Company
          .company__flex
            a(href="#" class=".company__item")
              img(src="src/img/information_pc.jpg", alt="")
              .company__title
                span.company__title-en Information
                span.company__title-ja 会社概要
            a(href="#" class=".company__item")
              img(src="src/img/access_pc.jpg", alt="")
              .company__title
                span.company__title-en access
                span.company__title-ja アクセス情報
    footer.footer
      p.footer__title PUZZLE
      ul.footer__list
        - let footerlist = ['Vision', 'Business', 'News', 'Recruit', 'Contact']
          each item in footerlist
            li.footer__list-item
